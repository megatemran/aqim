<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ✅ Updated for Android 15 Edge-to-Edge Compatibility -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <!-- ✅ Enable edge-to-edge enforcement (required for Android 15+) -->
        <item name="android:windowOptOutEdgeToEdgeEnforcement">false</item>
        <!-- ✅ Make system bars transparent for edge-to-edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- ✅ Draw behind system bars -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <style name="NormalTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">?android:colorBackground</item>
        <!-- ✅ Enable edge-to-edge enforcement (required for Android 15+) -->
        <item name="android:windowOptOutEdgeToEdgeEnforcement">false</item>
        <!-- ✅ Make system bars transparent for edge-to-edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- ✅ Draw behind system bars -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
</resources>